                                span.input-group-addon.bg-dark.text-light#basic-addon3 root username
                                input.form-control(placeholder="root username",aria-describedby="basic-addon3",type="text",value="bookworm",required)
                            br
                            .input-group
                                span.input-group-addon.bg-dark.text-light#basic-addon3 root password
                                input.form-control(placeholder="root password",aria-describedby="basic-addon3",type="password",value="wormbook",required)
                                span.input-class-btn
                                    button.btn.btn-secondary Show Password
